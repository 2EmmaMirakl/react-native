{
  "version": "0.4.0",
  "name": "react-packager",
  "description": "Build native apps with React!",
  "dest": "js",
  "plugins": [
    "lotus-babel"
  ],
  "babel": {
    "retainLines": true,
    "sourceMaps": "inline",
    "presets": [
      "react-native"
    ]
  },
  "jest": {
    "setupEnvScriptFile": "jestSupport/env.js",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testFileExtensions": [
      "js"
    ],
    "unmockedModulePathPatterns": [
      "source-map"
    ]
  },
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "jest",
    "lint": "node linter.js Examples/",
    "start": "./packager.sh"
  },
  "dependencies": {
    "babel-preset-react-native": "^1.9.0",
    "wordwrap": "^1.0.0"
  },
  "devDependencies": {
    "jest-cli": "git://github.com/facebook/jest#0.5.x",
    "eslint": "0.9.2"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:facebook/react-native.git"
  }
}
